<div id="container">
	<% if flash[:notice] %>
		<p class="notice"><%= flash[:notice] %></p>
	<% end %>
	<%= form_for @exercise, :remote => true do |exercise_form| %>
		<div class="value_field">
			<h1><%= exercise_form.text_field :name %></h1>
		</div>
		<section>
			<p>Weight each side</p>
			<div class="value_field">
				<%= exercise_form.number_field :weight_each_side, :class => "value" %>
				<%= button_tag "Up", :type => "button", :class => "up" %>
				<%= button_tag "Down", :type => "button", :class => "down" %>
			</div>
		</section>
		<div id="more_options">
			<section>
				<p>Bar weight</p>
				<div class="value_field">
					<%= exercise_form.number_field :bar_weight, :class => "value" %>
					<%= button_tag "Up", :type => "button", :class => "up" %>
					<%= button_tag "Down", :type => "button", :class => "down" %>
				</div>
			</section>
			<section>
				<p>Units</p>
				<div class="value_field">
					<%= exercise_form.select(:weight_units, options_for_select(["lbs", "kg"], @exercise['weight_units'])) %>
				</div>
			</section>
		</div>
		<section>
			<p>Total weight</p>
			<div class="value_field">
				<%= exercise_form.number_field :total_weight, :class => "value" %>
				<%= button_tag "Up", :type => "button", :class => "up" %>
				<%= button_tag "Down", :type => "button", :class => "down" %>
			</div>
		</section>
		<section>
			<p>Reps</p>
			<div class="value_field">
				<%= exercise_form.number_field :reps, :class => "value" %>
				<%= button_tag "Up", :type => "button", :class => "up" %>
				<%= button_tag "Down", :type => "button", :class => "down" %>
			</div>
		</section>
		<%= exercise_form.submit "Save" %>
	<% end %>
	<%= link_to "Delete", @exercise, { :method => :delete, :confirm => "Delete exercise?" } %>
	<%= link_to "New", new_exercise_path %>
	<%= link_to "All exercises", exercises_path %>
</div>